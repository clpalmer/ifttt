<div class="row justify-content-center align-items-center h-100 home">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body text-center">
        <h4 class="card-title">
          Buttons
          <span class="float-right fa-stack cursor-pointer modal-title-button" data-toggle="modal" data-target="#addButtonModal">
            <i class="fa fa-square fa-stack-2x text-success"></i>
            <i class="fa fa-plus fa-stack-1x text-white"></i>
          </span>
        </h4>
        <% if (typeof(error) !== 'undefined') { %>
        <%= JSON.stringify(error) %>
        <% } else { %>
        <table class="table">
          <tr>
            <th>Name</th>
            <th>ID</th>
            <th>Pin</th>
            <th></th>
          </tr>
          <% for (let b of buttons) { %>
          <tr>
            <td><%= b.name %></td>
            <td><%= b.id %></td>
            <td><%= b.pin %></td>
            <td class="text-right">
              <span class="fa-stack fa-xs cursor-pointer" data-toggle="modal" data-target="#deleteButtonConfirmationModal" data-button-id="<%= b.id %>">
                <i class="fa fa-circle fa-stack-2x text-danger"></i>
                <i class="fa fa-times fa-stack-1x text-white"></i>
              </span>
            </td>
          </tr>
          <% } %>
        </table>
        <% } %>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="deleteButtonConfirmationModal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">
        Are you sure you want to delete this button?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="deleteButton">Delete</button>
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="addButtonModal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <form action="/buttons" method="POST">
        <div class="modal-header">
          <h5 class="modal-title">Add Button</h5>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="button-name">Button Name</label>
            <input type="text" class="form-control" id="button-name" name="name" placeholder="Test Button" required>
          </div>
          <div class="form-group">
            <label for="button-id">Button ID</label>
            <input type="text" class="form-control" id="button-id" name="id" placeholder="00000000-0000-0000-000000000000" required>
          </div>
          <div class="form-group">
            <label for="button-pin">Pin Number</label>
            <select class="form-control" id="button-pin" name="pin">
              <option value="3" selected="selected">Pin 3</option>
              <option value="5">Pin 5</option>
              <option value="7">Pin 7</option>
              <option value="8">Pin 8</option>
              <option value="10">Pin 10</option>
              <option value="11">Pin 11</option>
              <option value="12">Pin 12</option>
              <option value="13">Pin 13</option>
              <option value="15">Pin 15</option>
              <option value="16">Pin 16</option>
              <option value="18">Pin 18</option>
              <option value="19">Pin 19</option>
              <option value="21">Pin 21</option>
              <option value="22">Pin 22</option>
              <option value="23">Pin 23</option>
              <option value="24">Pin 24</option>
              <option value="26">Pin 26</option>
              <option value="27">Pin 27</option>
              <option value="28">Pin 28</option>
              <option value="29">Pin 29</option>
              <option value="31">Pin 31</option>
              <option value="32">Pin 32</option>
              <option value="33">Pin 33</option>
              <option value="35">Pin 35</option>
              <option value="36">Pin 36</option>
              <option value="37">Pin 37</option>
              <option value="38">Pin 38</option>
              <option value="40">Pin 40</option>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>