<div class="row justify-content-center align-items-center h-100 login-form">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body pt-0 text-center">
        <div class="bg-primary d-inline-block icon-circle"><i class="far fa-user icon"></i></div>
        <h4 class="card-title">Login to Your Account</h4>
        <form method="post">
          <div class="form-group">
            <input name="username" type="text" class="form-control" placeholder="Username" required="required">
          </div>
          <div class="form-group">
            <input name="password" type="password" class="form-control" placeholder="Password" required="required">
          </div>
          <% if (typeof(error) !== 'undefined') { %>
          <p class="text-small text-danger"><%= error %></p>
          <% } %>
          <button type="submit" class="btn btn-primary btn-block btn-lg">Login</button>
        </form>     
      </div>
    </div>
  </div>
</div>